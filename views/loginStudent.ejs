<%- include('partials/htmlhead'); -%>
<div class="full-height" style="padding: 60px 120px;">
    <div class="w3-cell-row w3-card w3-container w3-padding-48 w3-round w3-white" style="margin:auto;">
        <div class="w3-cell w3-margin w3-border-right w3-border-deep-orange w3-padding">
            <h2>login</h2>
            <p>Login to create new elections,<br> view current elections, <br>and add canditates</p>            
        </div>
        <form action="/student" method="POST" class="w3-cell w3-padding ">
            <div class="w3-margin">
                <label for="matricule">matricule</label>
                <input type="text" class="w3-input w3-border w3-round-large" name="matricule" id="" required>
            </div>
            <div class="w3-margin">
                <label for="password">password</label>
                <input type="password" class="w3-input w3-border w3-round-large" name="password" id="" required>
            </div>
            <div class="w3-margin">
                <input type="submit" class="w3-input w3-button w3-round w3-deep-orange" value="login">
            </div>
            <% if(message){ %>
                <p><%=message %></p>
                <% } %>
            <div>Don't have an account yet? <a href="/register">register</a></div>
        </form>
    </div>
    <div id="feedback" class="w3-panel w3-center w3-animate-bottom w3-black" style="position: absolute; bottom:15%; width:100%;"><%=feedback %></div>


<script>
    const fd = document.getElementById("feedback");
        setTimeout(()=>{
            fd.style.display="none"
        }, 10000);
        function showFeedback(msg){
            feedback.innerText = msg;
            feedback.style.display = 'block';
            setTimeout(()=>{
            fd.style.display="none"
        }, 10000);
        }
</script>
</div>
