<%- include('partials/htmlhead') -%>
<div class="full-height" style="padding: 60px 120px;">
    <div class="w3-card w3-container form-padding w3-round w3-white" style="margin:auto;">
        <div class="w3-margin">
            <h2>Election</h2>
            <p>Submit form to vote</p>            
        </div>
        <form action=<%=`/voting/${id}-${matricule}` %> method="post" class="w3-padding ">
            <% for (const position in candidates) {  %>
                <div class="w3-margin">
                <label for="position"><h3><%=position %><h3></label></div>
                <% for(const candidate of candidates[position]) { %>
                <input type="radio" name=<%=position %> id="" value=<%=candidate %> class="w3-radio">
                <label for=<%=candidate %> > <%=candidate %> </label>
                <% } %>
            <% } %>
            <div class="w3-margin">
                <input type="submit" class="w3-input w3-round w3-button w3-deep-orange" value="vote">
            </div>
        </form>
    </div>
</div>
<%- include('partials/resubmission.ejs') -%>
